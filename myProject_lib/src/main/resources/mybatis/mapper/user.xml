<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="user">
 
	<select id="overlapCheck" resultType="int">
		SELECT COUNT(*) FROM USER WHERE ${valueType } = #{value }
	</select>
	
	<insert id="register">
		INSERT INTO USER (
			ID,
			EMAIL,
			USERNAME,
			PASSWORD,
			PHONE,
			ADDRESS
		) VALUES (
			USER_ID_SEQ.NEXTVAL,
			#{username },
			#{password },
			#{email },
			#{phone },
			#{address }
		)
	</insert>
</mapper> 

